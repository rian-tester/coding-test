pipeline {
    agent any

    stages {
        stage ('Build Backend Docker') {
            steps {
                script {
                    echo 'Start checking step before builiding'
                    // Verify /host-backend
                    def mountStatus = sh(script: 'test -d /host-backend', returnStatus: true)
                    if (mountStatus != 0) {
                        echo 'Mount check failed: /host-backend not found.'
                        error 'Please setup your sales-dashboard Jenkins and mount your local backend folder to /host-backend'
                    }
                    
                    echo 'Check /host-backend'
                    sh 'ls -la /host-backend || true'
                    
                    // Verify .env exists
                    def envStatus = sh (script: 'test -f /host-backend/.env', returnStatus: true)
                    if (envStatus != 0) {
                        echo 'Missing .env in /host-backend'
                        error 'Please provide .env file with OpenAI api key'
                    } else {
                        echo '.env found'
                    }
                }
                echo 'Build backend image with docker ignore'
                sh 'docker build -t sales-dashboard-backend:latest /host-backend'


            }
        }
        stage ('Build Frontend Docker') {
            steps {
                script {
                    echo 'Start checking step before builiding'
                    // Verify /host-frontend
                    def mountStatus = sh(script: 'test -d /host-frontend', returnStatus: true)
                    if (mountStatus != 0) {
                        echo 'Mount check failed: /host-frontend not found.'
                        error 'Please setup your sales-dashboard Jenkins and mount your local frontend folder to /host-frontend'
                    }
                    
                    echo 'Check /host-frontend'
                    sh 'ls -la /host-frontend || true'
                }
                echo 'Build frontend image with docker ignore'
                sh 'docker build -t sales-dashboard-frontend:latest /host-frontend'
            }            
        }

        stage ('Build Results') {
            steps {
                sh 'docker images'
            }
        }
    }
}
